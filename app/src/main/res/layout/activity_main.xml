<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/period">

        <TextView
            android:text="Period Calendar Survey"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="1. How often do you have periods?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/rgFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbRegular"
                android:text="Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbIrregular"
                android:text="Irregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

        </RadioGroup>

        <TextView
            android:text="2. How many days does your period usually last?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/etDuration"
            android:hint="Enter number of days"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="3. Which symptoms do you usually experience during your period? (Select all that apply)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/cbCramps"
            android:text="Cramps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/cbFatigue"
            android:text="Fatigue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/cbHeadaches"
            android:text="Headaches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/cbMoodSwings"
            android:text="Mood Swings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"/>

        <TextView
            android:text="4. How do you manage period pain?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/rgPainManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbPainkillers"
                android:text="Painkillers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbHeatTherapy"
                android:text="Heat Therapy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbOther"
                android:text="Other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

        </RadioGroup>

        <TextView
            android:text="5. Do you experience heavy bleeding during your periods?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"/>

        <RadioGroup
            android:id="@+id/rgHeavyBleeding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbHeavyBleedingYes"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rbHeavyBleedingNo"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnNext"
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>

    </LinearLayout>
</ScrollView>
